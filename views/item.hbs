</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Item Code</th>
      <th scope="col">Item Name</th>
      <th scope="col">Gross Price</th>
      <th scope="col">Tax Rate</th>
      <th scope="col">Tax Amount</th>
      <th scope="col">Net Price</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.item_code}}</td>
      <td>{{this.Item_name}}</td>
      <td>{{this.gross_price}}</td>
      <td><input type="text" class="form-control" id="tax_rate" value="{{this.tax_rate}}" placeholder="Tax Rate"
          name="tax_rate" onchange="calculateTax({{toJSON  this}}, this.value)"></td>
      <td>{{this.tax_amount}}</td>
      <td>{{this.net_price}}</td>
      <td class="text-end">
        <a href="/item/edititem/{{this.id}}" type="button" class="btn btn-primary btn-small"><i
            class="bi bi-pencil"></i>
          Edit</a>
      </td>
    </tr>
    {{/each}}

  </tbody>
</table>

